{
  "extends": "tslint:recommended",
  "rules": {
    "ordered-imports": false,
    "no-trailing-whitespace": {
      "severity": "error"
    },
    "max-classes-per-file": {
      "severity": "warning"
    },
    "object-literal-sort-keys": false,
    "no-any": {
      "severity": "warning"
    },
    "arrow-return-shorthand": true,
    "prefer-for-of": true,
    "typedef": {
      "severity": "warning"
    },
    "await-promise": [
      true,
      "RequestPromise"
    ],
    "curly": true,
    "no-empty": false,
    "no-invalid-this": true,
    "no-string-throw": {
      "severity": "warning"
    },
    "no-unused-expression": true,
    "prefer-const": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "no-duplicate-imports": true,
    "array-type": [
      true,
      "array"
    ],
    "promise-function-async": true,
    "no-bitwise": true,
    "no-debugger": true,
    "no-floating-promises": true,
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "interface-name": false,
    "member-ordering": false,
    "max-line-length": {
      "options": {
        "limit": 150
      }
    }
  },
  "overrides": [
    {
      "files": [
        "src/tests/**/*.ts"
      ],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
