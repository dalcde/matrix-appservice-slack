    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch on port 9999",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib/app.js",
            "preLaunchTask": "npm: build",
            "args": ["-c", "config/config.yaml", "-p", "9999"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}